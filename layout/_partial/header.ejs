<header id="header">
  <div id="banner" class="inner">
    <div id="avatar-warp"><img id="avatar" src="<%=theme.avatar%>"></div>
    <div id="header-title" class="inner">
      <h1 id="logo-wrap">
        <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
      </h1>
      <% if (theme.subtitle){ %>
        <h2 id="subtitle-wrap">
          <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
        </h2>
      <% } %>
      <ul id="main-nav">
        <% for (var i in theme.menu){ %>
        <li><a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
        <% } %>
      </ul>
      <ul id="social">
          <% for ( var i in theme.social){%>
        <li><a href="<%- url_for(theme.social[i])%>">
            <div class="<%= i%>"></div>
          </a></li>
        <% } %>
      </ul>
    </div>
    <div class="down">
    </div>
  </div>
</header>